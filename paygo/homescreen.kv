<KivyManager@FloatLayout>:
    HomeScreen:
    AddScreen:
    ConfirmPurchase:
    ErrorScreen:

#    grid layout for the dashboard
<HomeScreen@FloatLayout>:
    name: 'home_screen'
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.11, .12, .09, 1) #(.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    PayGoView:
        id: home_scroll
        pos: (self.parent.width * .125,  creditsButton.top + 10)

        GridLayout:
            id: scroll_grid
            size_hint_y: None
            height: self.minimum_height
#            minimum_height: self.height
            valign: "top"
            halign: "left"
            pos:  home_scroll.pos
            cols: 2
            rows: 13
            do_scroll_x: False
            do_scroll_y: True
            DashBoardLabel:
                text: "Credit Balance:"
            DashBoardLabel:
                id: credit_balance_text
            DashBoardLabel:
                text: "Liters Remaining:"
            DashBoardLabel:
                id: liters_remaining_text
            DashBoardLabel:
                text: "Rate per Liter:"
            DashBoardLabel:
                id: rate_text
            DashBoardLabel:
#            should this be the last hour from the top of the hour, or the last 60 minutes?
                text: "Average Flow Rate (Past Hour):"
            DashBoardLabel:
                id: average_flow_text
            DashBoardLabel:
                text: "Volume Consumed (Past 24 Hours):"
            DashBoardLabel:
                id: volume_24_text
            DashBoardLabel:
                text: "Balance Consumed (Past 24 Hours):"
            DashBoardLabel:
                id: balance_24_hours
            DashBoardLabel:
                text: "Last ORP Reading:"
            DashBoardLabel:
                id: orp_text
            DashBoardLabel:
                text: "Last TDS Reading:"
            DashBoardLabel:
                id: tds_text
            DashBoardLabel:
                text: "Last Flowmeter Timestamp:"
            DashBoardLabel:
                id: flowmeter_text
            DashBoardLabel:
                text: "Last UpSync Timestamp:"
            DashBoardLabel:
                id: upsync_text
            DashBoardLabel:
                text: "Last DownSync Timestamp:"
            DashBoardLabel:
                id: downsync_text
            DashBoardLabel:
                text: "Pressure A:"
            DashBoardLabel:
#               this will someday be populated with an actual value
                text: "0"
    PayGoButton:
        id: creditsButton
        text: "Add Credits"
        on_release: app.open_add_credit_screen()
        pos: (max(self.parent.center) - (self.width/2)), min(root.size)*.01
    Title:
        id: dashboardLabel
        text: "UNTAPPED PAYGO Controller"

<PayGoView@ScrollView>:
    size_hint: (.75, .60)
    canvas.before:
        Color:
            rgba: (.22, .25, .32, 1)
        Rectangle:
            size: root.size
            pos: root.pos

#Custom Label Type
<DashBoardLabel@Label>:
    font_size: 20
    color: (.61,.62,.7, 1)
    text_size: self.size
    valign: "center"
    halign: "left"
    size_hint_y: None
    padding: 50, 1

<Title@Label>:
    pos: (max(self.parent.center) - (self.width/2)), min(root.size) * 0.38
    font_size: 50
    color: (.86, .98, .96, 1)

<PayGoButton@Button>:
    size_hint: (.30, .17)
    anchor_x: 'center'
    font_size: 40
    color: (.86, .98, .96, 1)
    background_normal: ''
    background_color: (.61,.62,.7, 1)

<AddScreen>:
    id: add_screen
    name: 'add_screen'
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.11, .12, .09, 1) #(.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Title:
        text: "Add Credit"
    PayGoView:
        pos: (self.parent.width * .125,  pay_go_button.top + 10)
        GridLayout:
            cols: 1
            rows: 4
            size: self.parent.size
            GridLayout:
                cols: 2
                rows: 2
                top: balance_grid.top+ balance_grid.height
                DashBoardLabel:
                    valign: 'top'
                    id: old_balance_label
                    text: "Old Balance: "
                    width: self.parent.width/2
                    height: self.parent.height/2
                DashBoardLabel:
                    valign: 'top'
                    id: old_balance_text
                    width: self.parent.width/2
                    height: self.parent.height/2
                DashBoardLabel:
                    valign: 'top'
                    id: new_balance_label
                    text: "New Balance: "
                    width: self.parent.width/2
                    height: self.parent.height/2
                DashBoardLabel:
                    valign: 'top'
                    id: new_balance_text
                    width: self.parent.width/2
                    height: self.parent.height/2
            GridLayout:
                id: balance_grid
                rows: 1
                cols: 1
#                height: self.parent.height * .25

                canvas.before:
                    Color:
                        rgba: (0, 0, 0, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                DashBoardLabel:
                    id: add_amount
                    font_size: 30
                    halign: "left"
#                    size:self.parent.size
            GridLayout:
#                pos: (self.parent.x, self.parent.top - self.parent.height)
#                height: self.parent.height * .5
                rows: 1
                cols: 6
                CalculatorButton:
                    text: "1"
                CalculatorButton:
                    text: "2"
                CalculatorButton:
                    text: "3"
                CalculatorButton:
                    text: "4"
                CalculatorButton:
                    text: "5"
                CalculatorButton:
                    text: "6"
            GridLayout:
                rows: 1
                cols: 6
                CalculatorButton:
                    text: "7"
                CalculatorButton:
                    text: "8"
                CalculatorButton:
                    text: "9"
                CalculatorButton:
                    text: "."
                CalculatorButton:
                    text: "0"
                CalculatorButton:
                    text: "<"
    PayGoButton:
        id: pay_go_button
        on_release: app.cancel_add()
        text: 'Cancel'
        pos: (max(self.parent.center)/4), min(root.size)*.01
    PayGoButton:
        text: 'Purchase'
        on_release: app.confirm_transaction(add_amount.text)
        pos: (max(self.parent.center) + (max(self.parent.center)/7)), min(root.size)*.01

<ConfirmPurchase>:
    name: "confirm_screen"
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.11, .12, .09, 1) #(.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Title:
        text: "Warning!"
    PayGoView:
        pos: (self.parent.width * .125, back_to_add.top +  10)
        Label:
            id: confirmation_text
            font_size: 48
            halign: "center"
            valign: "center"
            text_size: self.size

    PayGoButton:
        id: back_to_add
        on_release: app.root.current = 'add_screen'
        text: 'Cancel'
        pos: (max(self.parent.center)/4), min(root.size)*.01
    PayGoButton:
        text: 'Confirm'
        on_release: app.purchase_credits()
        pos: (max(self.parent.center) + (max(self.parent.center)/7)), min(root.size)*.01

<ErrorScreen>:
    name: 'error_screen'
    Title:
        text: "Error Encountered! Please retry"
    PayGoButton:
        on_release: app.root.current = 'home_screen'
        text: 'Cancel'
        pos: (max(self.parent.center)), min(root.size)*.01


<CalculatorButton@Button>
    font_size: 36
    on_release: app.add_credit_button_click(self.text)