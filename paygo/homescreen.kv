#    grid layout for the dashboard
<FloatLayout>:
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    ScrollView:
        canvas.before:
            Color:
                rgba: (.89, .75, .83, 1)
            Rectangle:
                size: self.size
        size_hint: (.95, .8)
        pos: (self.parent.width * .05, 125)
        GridLayout:
            size: self.parent.size
            pos: self.parent.pos
            cols: 1
            rows: 8
            Label:
                text: "test"
                pos:
            Label:
                text: "test"
            Label:
                text: "test"
            Label:
                text: "test"
            Label:
                text: "test"
            Label:
                text: "test"
            Label:
                text: "test"
            Label:
                text: "test"
    Button:
        size_hint: (.15, .1)
        pos: (max(self.parent.center) - (self.width/2)), min(root.size)*.01
#        halign: 'center'
        anchor_x: 'center'
#        pos: (350, 50)
        text: "Add Credits"
        font_size: 20
        color: (.86, .98, .96, 1)
        background_normal: ''
        background_color: (.61,.62,.7, 1)
    Label:
        pos: (max(self.parent.center) - (self.width/2)), min(root.size) * 0.35
        text: "PayGo Stockholm Edition"
        font_size: 32
        color: (.86, .98, .96, 1)