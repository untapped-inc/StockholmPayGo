#    grid layout for the dashboard
<FloatLayout>:
    id: test
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.11, .12, .09, 1) #(.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    ScrollView:
        id: home_scroll
        size_hint: (.75, .67)
        pos: (self.parent.width * .125,  creditsButton.top + 10)
        canvas.before:
            Color:
                rgba: (.22, .25, .32, 1)
            Rectangle:
                size: home_scroll.size
                pos: home_scroll.pos
        GridLayout:
            id: scroll_grid
            size_hint_y: None
            height: self.minimum_height
#            minimum_height: self.height
            valign: "top"
            halign: "left"
            pos:  home_scroll.pos
            cols: 2
            rows: 10
            do_scroll_x: False
            do_scroll_y: True
            DashBoardLabel:
                text: "Credit Balance:"
            DashBoardLabel:
                id: credit_balance_text
            DashBoardLabel:
                text: "Rate per Liter:"
            DashBoardLabel:
                id: rate_text
            DashBoardLabel:
#            should this be the last hour from the top of the hour, or the last 60 minutes?
                text: "Average Flow Rate (Past Hour):"
            DashBoardLabel:
                id: average_flow_text
            DashBoardLabel:
                text: "Volume Consumed (Past 24 Hours):"
            DashBoardLabel:
                id: volume_24_text
            DashBoardLabel:
                text: "Balance Consumed (Past 24 Hours):"
            DashBoardLabel:
                id: balance_24_hours
            DashBoardLabel:
                text: "Last ORP Reading:"
            DashBoardLabel:
                id: orp_text
            DashBoardLabel:
                text: "Last TDS Reading:"
            DashBoardLabel:
                id: tds_text
            DashBoardLabel:
                text: "Flowmeter Reading:"
            DashBoardLabel:
                id: flowmeter_text
    Button:
        id: creditsButton
        size_hint: (.15, .1)
        pos: (max(self.parent.center) - (self.width/2)), min(root.size)*.01
        anchor_x: 'center'
        text: "Add Credits"
        font_size: 20
        color: (.86, .98, .96, 1)
        background_normal: ''
        background_color: (.61,.62,.7, 1)
    Label:
        id: dashboardLabel
        pos: (max(self.parent.center) - (self.width/2)), min(root.size) * 0.35
        text: "PayGo Stockholm Edition"
        font_size: 50
        color: (.86, .98, .96, 1)

#Custom Label Type
<DashBoardLabel@Label>:
    font_size: 38
    color: (.61,.62,.7, 1)
    text_size: self.size
    valign: "center"
    halign: "left"
    size_hint_y: None
    padding: 50, 1

