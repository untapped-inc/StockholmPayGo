#    grid layout for the dashboard
<FloatLayout>:
    orientation: 'lr-tb'
    canvas.before:
        Color:
            rgba: (.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        pos: self.parent.size
        text: "PayGo Stockholm Edition"
        font_size: 32
        halign: 'center'
        color: (.86, .98, .96, 1)
        valign: 'center'
#        label background: (.69, .72, .82, 1)
    ScrollView:
        canvas.before:
            Color:
                rgba: (.89, .75, .83, 1)
            Rectangle:
                size: self.size
        size_hint: (1, .8)
        pos: (0, 125)
        GridLayout:
            size: self.parent.size
            pos: self.parent.pos
            text: "test"
    Button:
        size_hint: (.15, .1)
        pos: (max(self.parent.center) - (self.width/2)), min(root.size)*.01
#        halign: 'center'
        anchor_x: 'center'
#        pos: (350, 50)
        text: "Add Credits"
        font_size: 20
        color: (.86, .98, .96, 1)
        background_normal: ''
        background_color: (.61,.62,.7, 1)
