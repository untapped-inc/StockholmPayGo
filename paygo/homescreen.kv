<KivyManager@FloatLayout>:
    HomeScreen:
    AddScreen:

#    grid layout for the dashboard
<HomeScreen@FloatLayout>:
    name: "home_screen"
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.11, .12, .09, 1) #(.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    PayGoView:
        id: home_scroll
        pos: (self.parent.width * .125,  creditsButton.top + 10)

        GridLayout:
            id: scroll_grid
            size_hint_y: None
            height: self.minimum_height
#            minimum_height: self.height
            valign: "top"
            halign: "left"
            pos:  home_scroll.pos
            cols: 2
            rows: 11
            do_scroll_x: False
            do_scroll_y: True
            DashBoardLabel:
                text: "Credit Balance:"
            DashBoardLabel:
                id: credit_balance_text
            DashBoardLabel:
                text: "Rate per Liter:"
            DashBoardLabel:
                id: rate_text
            DashBoardLabel:
#            should this be the last hour from the top of the hour, or the last 60 minutes?
                text: "Average Flow Rate (Past Hour):"
            DashBoardLabel:
                id: average_flow_text
            DashBoardLabel:
                text: "Volume Consumed (Past 24 Hours):"
            DashBoardLabel:
                id: volume_24_text
            DashBoardLabel:
                text: "Balance Consumed (Past 24 Hours):"
            DashBoardLabel:
                id: balance_24_hours
            DashBoardLabel:
                text: "Last ORP Reading:"
            DashBoardLabel:
                id: orp_text
            DashBoardLabel:
                text: "Last TDS Reading:"
            DashBoardLabel:
                id: tds_text
            DashBoardLabel:
                text: "Last Flowmeter Timestamp:"
            DashBoardLabel:
                id: flowmeter_text
            DashBoardLabel:
                text: "Last UpSync Timestamp:"
            DashBoardLabel:
                id: upsync_text
            DashBoardLabel:
                text: "Last DownSync Timestamp:"
            DashBoardLabel:
                id: downsync_text
    PayGoButton:
        id: creditsButton
        text: "Add Credits"
        on_release: app.root.current = "add_screen"
        pos: (max(self.parent.center) - (self.width/2)), min(root.size)*.01
    Title:
        id: dashboardLabel
        text: "PayGo Stockholm Edition"

<PayGoView@ScrollView>:
    size_hint: (.75, .60)
    canvas.before:
        Color:
            rgba: (.22, .25, .32, 1)
        Rectangle:
            size: root.size
            pos: root.pos

#Custom Label Type
<DashBoardLabel@Label>:
    font_size: 20
    color: (.61,.62,.7, 1)
    text_size: self.size
    valign: "center"
    halign: "left"
    size_hint_y: None
    padding: 50, 1

<Title@Label>:
    pos: (max(self.parent.center) - (self.width/2)), min(root.size) * 0.35
    font_size: 50
    color: (.86, .98, .96, 1)

<PayGoButton@Button>:
    size_hint: (.30, .17)
    anchor_x: 'center'
    font_size: 20
    color: (.86, .98, .96, 1)
    background_normal: ''
    background_color: (.61,.62,.7, 1)

<AddScreen>:
    name: 'add_screen'
    orientation: 'lr-tb'
    size:self.size
    pos:self.pos
    canvas.before:
        Color:
            rgba: (.11, .12, .09, 1) #(.22, .25, .32, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Title:
        text: "Add Credit"

    PayGoView:
        pos: (self.parent.width * .125,  pay_go_button.top + 10)
        DashBoardLabel:
            text: "Hello World!!"

    PayGoButton:
        id: pay_go_button
        on_release: app.root.current = 'home_screen'
        text: 'Cancel'
        pos: (max(self.parent.center)/4), min(root.size)*.01

    PayGoButton:
        text: 'Buy'
        pos: (max(self.parent.center) + (max(self.parent.center)/7)), min(root.size)*.01
